<h1>Improductive Reasons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @improductive_reasons.each do |improductive_reason| %>
      <tr>
        <td><%= improductive_reason.name %></td>
        <td><%= improductive_reason.description %></td>
        <td><%= link_to 'Show', improductive_reason %></td>
        <td><%= link_to 'Edit', edit_improductive_reason_path(improductive_reason) %></td>
        <td><%= link_to 'Destroy', improductive_reason, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

