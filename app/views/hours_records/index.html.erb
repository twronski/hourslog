<div class="table-responsive">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Dia</th>
        <th scope="col">Horas</th>
        <th scope="col">Atividade</th>
        <th scope="col">Projeto</th>
        <th scope="col">Profissional</th>
