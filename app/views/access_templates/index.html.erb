<p id="notice"><%= notice %></p>

<h1>Access Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Mandatory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_templates.each do |access_template| %>
      <tr>
        <td><%= access_template.name %></td>
        <td><%= access_template.description %></td>
        <td><%= access_template.mandatory %></td>
        <td><%= link_to 'Show', access_template %></td>
        <td><%= link_to 'Edit', edit_access_template_path(access_template) %></td>
        <td><%= link_to 'Destroy', access_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Access Template', new_access_template_path %>
