<p id="notice"><%= notice %></p>

<h1>Improvement Actions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @improvement_actions.each do |improvement_action| %>
      <tr>
        <td><%= improvement_action.title %></td>
        <td><%= improvement_action.description %></td>
        <td><%= improvement_action.status %></td>
        <td><%= link_to 'Show', improvement_action %></td>
        <td><%= link_to 'Edit', edit_improvement_action_path(improvement_action) %></td>
        <td><%= link_to 'Destroy', improvement_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

